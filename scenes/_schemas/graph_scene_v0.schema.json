{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scenes/_schemas/graph_scene_v0.schema.json",
  "title": "Graph Scene v0",
  "description": "Experimental v0 schema for graph-native scene files containing nodes and edges.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "nodes",
    "edges"
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "description": "Deterministic ordering rule: sort by node id ascending before merge.",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "id",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "minLength": 1
          },
          "label": {
            "type": "string"
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "description": "Deterministic ordering rule: sort by from, to, type before merge and drift tests.",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "from",
          "to",
          "type"
        ],
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "to": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
